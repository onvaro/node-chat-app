extends layout

block content
	.container
		.row
			.col-md-8
				input(type='text' placeholder='Ex: Walter White' class='form-control' id='name')
			.col-md-4
				button(type='button' class='btn btn-primary' id='join') Join Conversation
		br
		br
		.row
			.col-md-8
				div(class="panel panel-info" style="height: 300px; overflow: auto;")
					.panel-body
						div(class='list-group' id='chat-group')
			.col-md-2
				div(class="panel panel-info" style="height: 300px; overflow: auto;")
					.panel-body
						ul(class='list-group' id='user-group' style="height: 300px; overflow: auto;")
		br
		br
		.row
			.col-md-8
				input(type='text' placeholder='Ex: Hellooo!' class='form-control' id='msgText' disabled)
			.col-md-4
				button(type='button' class='btn btn-primary' id='send' disabled) Broadcast Message